{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "only-arrow-functions": true,
      "trailing-comma": false,
      "type-literal-delimiter": [true, {"singleLine": "always"}],
      "semicolon": [true, "always"],
      "comment-format": [true, "check-space", "check-uppercase"],
      "no-console": [true, "log"],
      "quotemark": [true, "double", "jsx-double"],
      "whitespace": [false, "check-branch", "check-decl", "check-operator", "check-module", "check-separator",
        "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock"], 
      "interface-over-type-literal": false
    },
    "rulesDirectory": []
}